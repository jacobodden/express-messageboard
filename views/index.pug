extends layout

block content
  h1= title
  p Welcome to #{title}

  ul
    each message in messages
      li
        span.title #{message.title} 
        span says: #{message.text} - 
        span.date on #{message.added.toUTCString()}

  form(method="POST" action="/new")
    div.form-group
      label(for="message_author") Author:
      input#message-author(type="text", name="message_author", placeholder="Author")
    div.form-group
      label(for="message_text") Text:
      input#message-text(type="text", name="message_text", placeholder="Text", maxLength=100)
    div.form-group
      button(type="submit") Submit
